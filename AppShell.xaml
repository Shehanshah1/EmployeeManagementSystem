<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmployeeManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:login="clr-namespace:EmployeeManagementSystem.LoginView"
    xmlns:dashboard="clr-namespace:EmployeeManagementSystem.Dashboard"
    xmlns:employeemanagement="clr-namespace:EmployeeManagementSystem.EmployeeManagement"
    xmlns:leaverequests="clr-namespace:EmployeeManagementSystem.LeaveRequests"
    xmlns:adminsettings="clr-namespace:EmployeeManagementSystem.AdminSettings"
    xmlns:usersettings="clr-namespace:EmployeeManagementSystem.UserSettings"
    xmlns:forgotpassword="clr-namespace:EmployeeManagementSystem.ForgotPassword"
    xmlns:createaccount="clr-namespace:EmployeeManagementSystem.CreateAccount"
    xmlns:resetpassword="clr-namespace:EmployeeManagementSystem.ResetPassword"
    Shell.FlyoutBehavior="Disabled"
    Title="EmployeeManagementSystem">

    <!-- LoginView as the initial page -->
    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate login:LoginView}"
                  Route="LoginView"/>

    <!-- Dashboard as the target after login -->
    <ShellContent Title="Dashboard" 
                  ContentTemplate="{DataTemplate dashboard:Dashboard}"
                  Route="Dashboard"/>

    <!-- ForgotPassword as a page -->
    <ShellContent Title="ForgotPassword"
                  ContentTemplate="{DataTemplate forgotpassword:ForgotPassword}"
                  Route="ForgotPassword"/>

    <!-- ResetPassword as a page -->
    <ShellContent Title="ResetPassword"
                  ContentTemplate="{DataTemplate resetpassword:ResetPassword}"
                  Route="ResetPassword"/>
    
    <!-- Create Account as a page -->
    <ShellContent Title="CreateAccount"
                  ContentTemplate="{DataTemplate createaccount:CreateAccount}"
                  Route="CreateAccount"/>

    <!-- Employee Management as the target after dashboard -->
    <ShellContent Title="EmployeeManagement" 
                  ContentTemplate="{DataTemplate employeemanagement:EmployeeManagement}"
                  Route="EmployeeManagement"/>
    
    <!-- Leave Requests as the target after dashboard -->
    <ShellContent Title="LeaveRequests" 
                  ContentTemplate="{DataTemplate leaverequests:LeaveRequests}"
                  Route="LeaveRequests"/>

    <!-- Admin Settings as the target after dashboard -->
    <ShellContent Title="AdminSettings" 
                  ContentTemplate="{DataTemplate adminsettings:AdminSettings}"
                  Route="AdminSettings"/>
    <!-- User Settings as the target after dashboard -->
    <ShellContent Title="UserSettings" 
                  ContentTemplate="{DataTemplate usersettings:UserSettings}"
                  Route="UserSettings"/>
</Shell>
