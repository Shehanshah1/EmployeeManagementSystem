<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmployeeManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:login="clr-namespace:EmployeeManagementSystem.LoginView"
    xmlns:dashboard="clr-namespace:EmployeeManagementSystem.Dashboard"
    Shell.FlyoutBehavior="Disabled"
    Title="EmployeeManagementSystem">

    <!-- LoginView as the initial page -->
    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate login:LoginView}"
                  Route="LoginView"/>

    <!-- Dashboard as the target after login -->
    <ShellContent Title="Dashboard" 
                  ContentTemplate="{DataTemplate dashboard:Dashboard}"
                  Route="Dashboard"/>
</Shell>
