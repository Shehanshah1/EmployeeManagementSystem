<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagementSystem.ResetPassword.ResetPassword"
             Title="ResetPassword"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Label
           Text="Reset Password"
           FontSize="Header"
           FontAttributes="Bold"
           HorizontalOptions="CenterAndExpand"
           Margin="30"/>
        <Label
     Text="Please enter the code provided in your email:"
     FontSize="Medium"
     FontAttributes="Bold"
     HorizontalOptions="CenterAndExpand"
     Margin="30"/>

        <Entry 
         Placeholder="Enter your code..." 
          MaximumWidthRequest="300"
           HorizontalOptions="CenterAndExpand"
           />
        <Button    
   BackgroundColor="DarkSlateGray"
   HeightRequest="60"
   Text="Submit"
   MaximumWidthRequest="300"
   TextColor="White"
            Margin="20"
   Clicked="OnSubmitButtonClicked"/>

        <!-- Back to Login Button -->
        <Button    
   BackgroundColor="DarkSlateGray"
   HeightRequest="60"
   Text="Back"
   MaximumWidthRequest="200"
   TextColor="White"
            Margin="20"
   Clicked="OnBackButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>