<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagementSystem.LeaveRequests.LeaveRequests"
             Title="LeaveRequests"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <Grid ColumnDefinitions="253,*" RowDefinitions=".2*, .1*,.1*,.1*,.1*,.3*">

            <!-- Left Sidebar Background -->
            <BoxView 
        Grid.Column="0"
        Grid.RowSpan="6"
        Color="#7664a9" />

            <!-- Right Column Background -->
            <BoxView 
        Grid.Column="1"
        Grid.RowSpan="6"
        Color="#1a1c3d" />

            <!-- Sidebar Buttons and Logo -->
            <StackLayout Grid.Column="0" Padding="10" Spacing="20" Grid.RowSpan="7">
                <!-- Profile Picture or Logo Placeholder -->
                <!--  <Image Source="your_logo_placeholder.png" WidthRequest="60" HeightRequest="60" HorizontalOptions="Center"/>  -->
                <RoundRectangle 
         Grid.Column="0"
         Grid.Row="0"
         Margin="0,20,0,0"
         CornerRadius="360"
         WidthRequest="80"
         HeightRequest="80"
         BackgroundColor="Gray"
         VerticalOptions="Center"
         HorizontalOptions="Center"
     />
                <!-- Sidebar Buttons -->
                <Button 
             Text="Dashboard" 
             FontSize="Small" 
             BackgroundColor="SlateGray" 
             TextColor="White" 
             HorizontalOptions="FillAndExpand" 
             Grid.Row="1"
             Clicked="OnDashboardButtonClicked"/>
                <Button 
             Text="Employee Management"
             FontSize="Small" 
             BackgroundColor="SlateGray" 
             TextColor="White" 
             HorizontalOptions="FillAndExpand" 
             Grid.Row="2"
             Clicked="OnEmployeeManagementButtonClicked"/>
                <Button 
             Text="Leave Requests" 
             FontSize="Small" 
             BackgroundColor="#322f5c" 
             TextColor="White" 
             HorizontalOptions="FillAndExpand"
             Grid.Row="3"
            />
                <Button 
             Text="Admin Settings" 
             FontSize="Small" 
             BackgroundColor="SlateGray" 
             TextColor="White" 
             HorizontalOptions="FillAndExpand" 
             Grid.Row="4"
             Clicked="OnAdminSettingsButtonClicked"/>
                <Button 
Text="Log Out" 
FontSize="Small" 
BackgroundColor="SlateGray" 
TextColor="White" 
HorizontalOptions="FillAndExpand" 
Grid.Row="5"
Clicked="OnLogOutButtonClicked"/>

                <!-- Admin Label -->
                <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="FillAndExpand" Grid.Column="0" Grid.Row="6">
                    <!--  <Image Source="admin_icon.png" WidthRequest="30" HeightRequest="30" Margin="0,0,10,0"/> -->
                    <Button 
                 Text="admin_aelin" 
                 TextColor="White" 
                 Margin="0,0"
                 FontSize="Small" 
                 VerticalOptions="CenterAndExpand" 
                 BackgroundColor="#1a1c3d"
                 HorizontalOptions="FillAndExpand"
                 Clicked="OnUserSettingsButtonClicked"/>
                </StackLayout>
            </StackLayout>


            <Grid Grid.Column="2" Grid.RowSpan="6"
      ColumnDefinitions="*,*,*" RowDefinitions=".2*,.2*, .2*, .2*, .2*, .2*">
                <!-- Leave Requests Greeting -->

                <Label Grid.Column="0" Grid.Row="0" Text="Leave Requests" Margin="20,0,0,20" HorizontalOptions="Start" VerticalOptions="End" FontSize="Large" FontAttributes="Bold" TextColor="White" />

                <!-- Divider Line -->
                <Line 
        Grid.ColumnSpan="3"
        Stroke="White"
        X1="0"
        Y1="90"
        X2="2000" 
        Y2="90"/>

                <Entry
        Grid.Column="0"
        Grid.ColumnSpan="2"
        WidthRequest="600"
        Grid.Row="1"
        Placeholder="Search by Employee ID or Name"
        BackgroundColor="White" 
        Margin="20,0,0,0"
        HorizontalOptions="StartAndExpand"
        VerticalOptions="StartAndExpand"
        FontSize="Small"
        TextColor="White" />

                <Entry
       Grid.Column="2"
       WidthRequest="300"
       Grid.Row="1"
       Placeholder="Search by Status"
       BackgroundColor="White" 
       HorizontalOptions="StartAndExpand"
       VerticalOptions="StartAndExpand"
       FontSize="Small"
       TextColor="White" />


            </Grid>

            <VerticalStackLayout Padding="10" Grid.Column="2" Grid.Row="1" Grid.RowSpan="6">


                <!-- Navigation Buttons -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
                    <Button Text="Employee Records" Command="{Binding NavigateToEmployeeRecordsCommand}" Margin="20" />
                    <Button Text="Departments" Command="{Binding NavigateToDepartmentsCommand}" Margin="20"/>
                    <Button Text="Leave Requests" Command="{Binding NavigateToLeaveRequestsCommand}" Margin="20"/>
                </StackLayout>

                <!-- Table for Leave Requests -->
                <Label Text="Leave Requests" 
               FontSize="Medium" 
               FontAttributes="Bold" 
               Margin="10,20,10,5" />

                <Border Stroke="Gray" StrokeThickness="2">
                    <CollectionView ItemsSource="{Binding LeaveRequests}" Margin="10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" ColumnDefinitions="*, *, *, *">
                                    <Label Text="{Binding EmployeeName}" Grid.Column="0" />
                                    <Label Text="{Binding LeaveType}" Grid.Column="1" />
                                    <Label Text="{Binding StartDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Column="2" />
                                    <Label Text="{Binding EndDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Column="3" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <!-- Summary Information (if needed) -->
                <StackLayout Margin="10">
                    <Label Text="Employee Count: 5" FontAttributes="Bold" />
                    <Label Text="Pending Leave Requests: 0" FontAttributes="Bold" />
                </StackLayout>

                <!-- Additional Details (Add/Edit/Delete leave requests) -->
                <VerticalStackLayout>
                    <Label Text="Manage Leave Requests" 
                   FontSize="Medium" 
                           HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold" 
                   Margin="10,20,10,5" />
                    <Button Text="Add New Leave Request" Command="{Binding AddLeaveRequestCommand}" Margin="2" MaximumWidthRequest="200"/>
                    <Button Text="Edit Selected Request" Command="{Binding EditLeaveRequestCommand}" Margin="2" MaximumWidthRequest="200" />
                    <Button Text="Delete Selected Request" Command="{Binding DeleteLeaveRequestCommand}" Margin="2" MaximumWidthRequest="200"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>